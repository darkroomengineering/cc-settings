{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_description": "Optional MCP servers. Add based on project needs. Remember: keep total active servers under 10.",

  "mcpServers": {
    "railway": {
      "command": "npx",
      "args": ["-y", "@railway/mcp-server"],
      "env": {
        "RAILWAY_TOKEN": "YOUR_RAILWAY_TOKEN"
      },
      "_description": "Railway deployment and database management.",
      "_usage": "Deploy services, manage databases, view logs",
      "_contextCost": "low",
      "_getToken": "https://railway.app/account/tokens"
    },

    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server"],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "YOUR_SUPABASE_ACCESS_TOKEN"
      },
      "_description": "Supabase database, auth, and storage management.",
      "_usage": "Query databases, manage auth users, storage operations",
      "_contextCost": "medium",
      "_getToken": "https://supabase.com/dashboard/account/tokens"
    },

    "cloudflare": {
      "command": "npx",
      "args": ["-y", "@cloudflare/mcp-server"],
      "env": {
        "CLOUDFLARE_API_TOKEN": "YOUR_CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID": "YOUR_CLOUDFLARE_ACCOUNT_ID"
      },
      "_description": "Cloudflare Workers, R2, DNS, and KV management.",
      "_usage": "Deploy workers, manage DNS records, R2 storage, KV stores",
      "_contextCost": "medium",
      "_getToken": "https://dash.cloudflare.com/profile/api-tokens"
    },

    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_GITHUB_PAT"
      },
      "_description": "GitHub repository management. Issues, PRs, releases.",
      "_usage": "Create issues, manage PRs, view repo info, releases",
      "_contextCost": "medium",
      "_getToken": "https://github.com/settings/tokens"
    },

    "firecrawl": {
      "command": "npx",
      "args": ["-y", "@firecrawl/mcp-server"],
      "env": {
        "FIRECRAWL_API_KEY": "YOUR_FIRECRAWL_API_KEY"
      },
      "_description": "Web scraping and crawling for research.",
      "_usage": "Scrape websites, extract content, crawl documentation",
      "_contextCost": "low",
      "_getToken": "https://firecrawl.dev/dashboard"
    },

    "linear": {
      "command": "npx",
      "args": ["-y", "@linear/mcp-server"],
      "env": {
        "LINEAR_API_KEY": "YOUR_LINEAR_API_KEY"
      },
      "_description": "Linear issue tracking integration.",
      "_usage": "Create issues, update status, view project boards",
      "_contextCost": "low",
      "_getToken": "https://linear.app/settings/api"
    },

    "slack": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "YOUR_SLACK_BOT_TOKEN",
        "SLACK_TEAM_ID": "YOUR_SLACK_TEAM_ID"
      },
      "_description": "Slack messaging and channel management.",
      "_usage": "Send messages, read channels, search history",
      "_contextCost": "medium",
      "_getToken": "https://api.slack.com/apps"
    },

    "notion": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-notion"],
      "env": {
        "NOTION_API_KEY": "YOUR_NOTION_API_KEY"
      },
      "_description": "Notion database and page management.",
      "_usage": "Query databases, create pages, update content",
      "_contextCost": "medium",
      "_getToken": "https://www.notion.so/my-integrations"
    },

    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://user:password@host:5432/database"
      },
      "_description": "Direct PostgreSQL database access.",
      "_usage": "Run queries, inspect schema, manage data",
      "_contextCost": "medium",
      "_security": "Use read-only connection for safety"
    },

    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "--db-path", "./data.db"],
      "env": {},
      "_description": "Local SQLite database access.",
      "_usage": "Query local databases, inspect schema",
      "_contextCost": "low"
    },

    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-puppeteer"],
      "env": {},
      "_description": "Browser automation for testing and scraping.",
      "_usage": "Screenshot pages, interact with UIs, test flows",
      "_contextCost": "high"
    },

    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/path/to/allowed/directory"],
      "env": {},
      "_description": "Filesystem access for specific directories.",
      "_usage": "Read/write files in allowed directories",
      "_contextCost": "low",
      "_security": "Only grants access to specified paths"
    }
  }
}
