{
	"coauthorship": false,
	"statusLine": {
		"type": "command",
		"command": "bash \"$HOME/.claude/scripts/statusline.sh\""
	},
	"mcpServers": {
		"context7": {
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp@1.0.8"],
			"_comment": "Library documentation lookup. Auto-triggered by /docs skill and documentation-related prompts."
		},
		"playwright": {
			"command": "npx",
			"args": ["-y", "@anthropic/mcp-server-playwright"],
			"_comment": "Browser automation, debugging, and E2E testing. Use for visual debugging, screenshots, and browser interactions."
		},
		"Sanity": {
			"type": "http",
			"url": "https://mcp.sanity.io",
			"_comment": "Sanity CMS operations. Requires OAuth auth on first use. See: sanity.io/docs/compute-and-ai/mcp-server"
		},
		"tldr": {
			"command": "tldr-mcp",
			"args": ["--project", "."],
			"_comment": "Requires: pipx install llm-tldr. Run 'tldr warm .' in project to index."
		}
	},
	"permissions": {
		"allow": [
			"Bash(bun:*)",
			"Bash(bunx:*)",
			"Bash(git status:*)",
			"Bash(git diff:*)",
			"Bash(git log:*)",
			"Bash(git branch:*)",
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"Bash(git checkout:*)",
			"Bash(git stash:*)",
			"Bash(git push:*)",
			"Bash(gh:*)",
			"Bash(biome:*)",
			"Bash(vitest:*)",
			"Bash(playwright:*)",
			"Bash(bun run:*)",
			"Bash(npm run:*)",
			"Bash(curl:*)",
			"Bash(rm -rf node_modules)",
			"Bash(rm -rf .next)",
			"Bash(rm -rf dist)",
			"Bash(rm -rf .turbo)",
			"Bash(rm *.tmp)",
			"Bash(tree:*)",
			"Bash(find:*)",
			"Bash(cat:*)",
			"Bash(head:*)",
			"Bash(tail:*)",
			"Bash(wc:*)",
			"Bash(grep:*)",
			"Bash(ls:*)",
			"Bash(pwd:*)",
			"Bash(echo:*)",
			"Bash(mkdir:*)",
			"Bash(cp:*)",
			"Bash(mv:*)",
			"Read(*)",
			"Write(*)",
			"Edit(*)",
			"MultiEdit(*)",
			"Glob(*)",
			"Grep(*)",
			"LS(*)",
			"TodoWrite(*)"
		],
		"deny": [
			"Bash(rm -rf /)",
			"Bash(rm -rf /*)",
			"Bash(rm -rf ~)",
			"Bash(rm -rf ~/*)",
			"Bash(rm -rf ~/.ssh)",
			"Bash(rm -rf ~/.gnupg)",
			"Bash(rm -rf ~/.aws)",
			"Bash(cat ~/.ssh/*)",
			"Bash(cat ~/.aws/*)",
			"Bash(cat ~/.gnupg/*)",
			"Write(~/.ssh/*)",
			"Write(~/.aws/*)",
			"Write(~/.gnupg/*)",
			"Bash(curl * | bash)",
			"Bash(curl * | sh)",
			"Bash(git push --force origin main)",
			"Bash(git push --force origin master)",
			"Bash(git push -f origin main)",
			"Bash(git push -f origin master)",
			"Bash(sudo:*)",
			"Bash(chmod 777:*)"
		]
	},
	"hooks": {
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bash \"$HOME/.claude/scripts/skill-activation.sh\" \"$PROMPT\""
					}
				]
			}
		],
		"PreToolUse": [],
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "bash \"$HOME/.claude/scripts/post-edit.sh\""
					}
				]
			},
			{
				"matcher": "mcp__tldr",
				"hooks": [
					{
						"type": "command",
						"command": "bash \"$HOME/.claude/scripts/track-tldr.sh\" \"$TOOL_NAME\""
					}
				]
			}
		],
		"PreCompact": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bash \"$HOME/.claude/scripts/create-handoff.sh\""
					}
				]
			}
		],
		"SessionStart": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bash \"$HOME/.claude/scripts/session-start.sh\""
					}
				]
			}
		],
		"SessionEnd": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bash \"$HOME/.claude/scripts/tldr-stats.sh\"; bash \"$HOME/.claude/scripts/create-handoff.sh\""
					}
				]
			}
		],
		"Notification": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bash \"$HOME/.claude/scripts/notify.sh\""
					}
				]
			}
		]
	}
}
